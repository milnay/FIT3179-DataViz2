{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Australia's minerals export relationships",
  "projection": {"type": "equalEarth"},
  "background":"aliceblue",
  "params": [
        {
        "name": "topn",
        "bind": {
          "input": "select",
          "options": [null, 5, 10, 20],
          "labels": ["Show All", "Top 5", "Top 10", "Top 20"],
          "name": "Show top n exports: "
        }
      }
      ],
  "layer": [
  {
      "data": {
      "url":"https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/js/world_map.json",
      "format": {
          "type": "topojson", 
          "feature":"ne_110m_admin_0_countries"}
              },
      "mark": {
          "type": "geoshape", "fill": "forestgreen", "stroke":
          "black", "strokeWidth": 0.5, "strokeOpacity": 0.6, "fillOpacity": 0.2
      }
  }, 
  {
      "data": {
        "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv"
      },
      "transform": [
        {
          "lookup": "Partner Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }, 
        {
          "calculate": "(-25.274398)", 
          "as": "origin_latitude"
        }, 
        {
          "calculate": "(133.775136)", 
          "as": "origin_longitude"
        },
        {
          "calculate": "(datum['Export (US$ Thousand)']*1000)",
          "as": "export_value"
        },
        {
          "sort": [{"field": "Export (US$ Thousand)", "order": "descending"}],
          "window": [
            {
              "op": "rank",
              "as": "rank"
            }
        ]
        },
        {
          "filter": "(topn == null) || (datum.rank <= topn)"
        }
       
      ],
      "projection": {
        "type":"equalEarth"
      } ,
      "mark":{
        "type": "rule",
        "interpolate": "monotone",
        "stroke": "black",
        "strokeOpacity": 0.6,
        "tooltip": true
      },
      "encoding": {
        "longitude": {
        "field": "origin_longitude",
        "type": "quantitative"
      },
      "latitude": {
        "field": "origin_latitude",
        "type": "quantitative"
      },
      "longitude2": {
        "field": "dest_longitude"
      },
      "latitude2": {
        "field": "dest_latitude"
      },
      "size":{
        "field":"export_value",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [10000000, 90000000],
          "range": [5,10,15]
        },
        "legend": {"format": ".1s",
        "title": "Export Value (in $USD)",
        "fillColor": "lightgray",
        "offset": 30,
        "padding": 5
        }
      },
      "tooltip": [
      {
        "field": "Partner Name",
        "type": "nominal",
        "title": "Partner Country"
      },
      {
        "field": "export_value",
        "type": "quantitative",
        "title": "Export Value ($USD)",
        "format": ".1s"
      }
    ]
      }
  },
  {

  "data": {
  "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/countryInfo.csv"
      },
  "transform": [
    {
      "lookup": "name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv"
        },
        "key": "Partner Name",
        "fields": ["Export (US$ Thousand)"]
      },
      "as": "has_export_data"
    },
    {
      "filter": "datum.has_export_data != null"
    },
    {
      "sort": [{"field": "has_export_data", "order": "descending"}],
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
    ]
    },
    {
      "filter": "(topn == null) || (datum.rank <= topn)"
    }
  ],
  "projection": {
    "type": "equalEarth"
        },
  "mark": {
    "type":"circle",
    "tooltip": false
    },
    "encoding": {
      "longitude": {
        "field": "longitude",
        "type": "quantitative"
      },
      "latitude": {
        "field": "latitude",
        "type": "quantitative"
      },
      "size": {
        "value": 40
      },
      "color": {
        "value": "white"
      },
      "stroke":{"value": "black"}
    }

  }, 
  {
  "data": {
  "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/countryInfo.csv"},
  "transform":[
    {
      "calculate": "(-25.274398)", 
      "as": "origin_latitude"
    }, 
    {
      "calculate": "(133.775136)", 
      "as": "origin_longitude"
    }
  ],
  "mark":{
    "type":"circle"},
  "encoding":{
    "longitude": {
        "field": "origin_longitude",
        "type": "quantitative"
      },
      "latitude": {
        "field": "origin_latitude",
        "type": "quantitative"
      },
      "size": {
        "value": 40
      },
      "color": {
        "value": "red"
      },
      "stroke":{"value": "black"}
  }
  },
  {
    "data":{
      "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv", "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter":"datum['Partner Name'] === 'China'"
      },
      {
        "calculate": "(104.1954)", "as": "china_longitude"
      },
      {
        "calculate": "(35.8617)", "as": "china_latitude"
      },
      {
        "calculate": "format(datum['Export (US$ Thousand)'], '.2s')", "as": "export_value"
      }
    ],
    "mark": {
      "type": "text",
      "align": "left",
      "dx": 80,  
      "dy": -20,
      "fontWeight":"lighter",
      "color":"purple",
      "font": "serif"
    },
    "encoding": {
      "longitude": {
        "field": "china_longitude",
        "type": "quantitative"
      }, 
      "latitude": {
        "field": "china_latitude", 
        "type": "quantitative"
      },   
      "text": {
        "value":["In 2022, China remained the largest", "importer of Australian Minerals,", 
        "with a total value of around $82 million USD "]
        
      }}
  },
  {
    "data":{
      "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv", "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter":"datum['Partner Name'] === 'China'"
      },
      {
        "calculate": "(104.1954)", "as": "china_longitude"
      },
      {
        "calculate": "(35.8617)", "as": "china_latitude"
      },
      {
        "calculate": "format(datum['Export (US$ Thousand)'], '.2s')", "as": "export_value"
      }
    ],
    "mark": {
      "type": "circle"
    },
    "encoding": {
      "longitude": {
        "field": "china_longitude",
        "type": "quantitative"
      }, 
      "latitude": {
        "field": "china_latitude", 
        "type": "quantitative"
      },   
      "size": {
        "value": 70
      },
      "color": {
        "value": "purple"
      }
  }
  }
]   
}
