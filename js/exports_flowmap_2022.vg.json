{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Australia's minerals export relationships",
  "projection": {"type": "equalEarth"},
  "layer": [
  {
      "data": {
      "url":"https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/js/world_map.json",
      "format": {
          "type": "topojson", 
          "feature":"ne_110m_admin_0_countries"}
              },
      "mark": {
          "type": "geoshape", "fill": "lightgray", "stroke":
          "black", "strokeWidth": 0.5, "strokeOpacity": 0.6
      }
  }, 
  {

  "data": {
  "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/countryInfo.csv"
      },
  "transform": [
    {
      "lookup": "country_name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv"
        },
        "key": "destination_country"
      },
      "as": ["has_export_data"]
    },
    {
      "filter": "datum.has_export_data != null"
    }
  ],
  "projection": {
    "type": "equalEarth"
        },
  "mark": {"type":"circle","tooltip":true},
  "encoding": {
    "longitude": {
      "field": "longitude",
      "type": "quantitative"
    },
    "latitude": {
      "field": "latitude",
      "type": "quantitative"
    },
    "size": {
      "value": 5
    },
    "color": {
      "value": "blue"
    }
    }

  },
  {
      "data": {
        "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/aus_exports_2022.csv"
      },
      "transform": [
        {
          "lookup": "Partner Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }, 
        {
          "calculate": "(-25.274398)", 
          "as": "origin_latitude"
        }, 
        {
          "calculate": "(133.775136)", 
          "as": "origin_longitude"
        },
        {
          "calculate": "(datum['Export (US$ Thousand)']*1000)",
          "as": "export_value"
        },
        {
          "window": [
            {
              "op": "rank",
              "as": "rank"
            }
        ]
        }
      ],
      "projection": {
        "type":"equalEarth"
      } ,
      "mark":{
        "type": "line",
        "interpolate": "basis",
        "strokeOpacity": 0.6,
        "tooltip": true
      },
      "encoding": {
        "longitude": {
        "field": "origin_longitude",
        "type": "quantitative"
      },
      "latitude": {
        "field": "origin_latitude",
        "type": "quantitative"
      },
      "longitude2": {
        "field": "dest_longitude"
      },
      "latitude2": {
        "field": "dest_latitude"
      },
      "size":{
        "field":"export_value",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [10000000, 90000000],
          "range": [5,10,15]
        },
        "legend": {"format": ".1s",
        "title": "Export Value (in $USD)"}
      },
      "color": {
        "value": "red"
       },
      "tooltip": [
      {
        "field": "Reporter Name",
        "type": "nominal",
        "title": "Origin Country"
      },
      {
        "field": "Partner Name",
        "type": "nominal",
        "title": "Destination Country"
      },
      {
        "field": "export_value",
        "type": "quantitative",
        "title": "Export Value",
        "format": ".1s"
      }
    ]
      }
  }
]   
}
