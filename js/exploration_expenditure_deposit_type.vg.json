{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Exploration Expenditure by Deposit Type",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/milnay/FIT3179-DataViz2/refs/heads/main/data/exploration_expenditure_deposit_type.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "'In ' + timeFormat(datum.Date, '%B %Y') + ', Australia spent ' + datum.Expenditure + 'M $ in exploring ' + datum['Deposit type'] + '.'",
      "as": "custom_tooltip"
    }
  ],
  
  "params": [
    {
      "name": "depositTypeSelection",
      "value": "Total deposits",  
      "bind": {
        "input": "select",
        "options": ["Total deposits", "Existing vs New deposits"],
        "labels": ["Total deposits", "Existing vs New Deposits"],
        "name": "Select Deposit Type: "
      }
    }
  ],

  "layer": [
    {
      "layer" : [
        {
          "transform": [
            {
            "filter": "depositTypeSelection == 'Total deposits' && datum['Deposit type'] == 'Total deposits'"
            }
          ],
          "mark": {
          "type": "area"
                  },
        "encoding": {
          "x": {
            "timeUnit":"yearmonth",
            "type": "temporal",
            "field": "Date",
            "title": "Date",
            "axis": {"format": "%b %Y"}
          },
          "y": {
            "field": "Expenditure",
            "type": "quantitative",
            "title": "Expenditure (in millions)"
          }, 
          "tooltip": { "field": "custom_tooltip", "type": "nominal" }
                  }
        }, 
        {
          "transform": 
          [
          {
            "window": [
              {
                "op": "first_value",
                "field": "Expenditure",
                "as": "Initial_Expenditure"
              },
              {
                "op": "last_value",
                "field": "Expenditure",
                "as": "Final_Expenditure"
              }
                      ]
        },
        {
          "filter":
            "datum.Initial_Expenditure == 353.9 && datum.Final_Expenditure == 1015.3  && depositTypeSelection == 'Total deposits' && datum['Deposit type'] == 'Total deposits'" 
        },
        {
          "calculate": "(datum. Final_Expenditure - datum.Initial_Expenditure) / datum.Initial_Expenditure * 100",
          "as": "Percentage_Increase_value"
        }, {
          "calculate": "'Exploration expenditure for ' + datum['Deposit type'] + ' rose by ' + format(datum.Percentage_Increase_value, '.1f') + '%' ",
          "as": "Percentage_Increase"
          }
        ],
        "mark": {
        "type": "text",
        "align": "center",
        "dx": -30,
        "dy": -120,
        "color": "black", "tooltip":true
                },
        "encoding":  {"text": {"field": "Percentage_Increase"}}
        }
      ]
    },
    {
      "transform": [
        {
          "filter": "depositTypeSelection == 'Existing vs New deposits' && datum['Deposit type'] != 'Total deposits'"
        }
      ],
      "mark": {
        "type": "area"
      },
      "encoding": {
        "x": {
          "timeUnit":"yearmonth",
          "type": "temporal",
          "field": "Date",
          "title": "Date",
          "axis": {"format": "%b %Y" }
        },
        "y": {
          "field": "Expenditure",
          "type": "quantitative",
          "title": "Expenditure (in millions)"
        },
        "color": {
          "field": "Deposit type",
          "type": "nominal",
          "scale": {
            "domain": ["Existing deposits", "New deposits"],
            "range": ["#1f77b4", "#aec7e8"]
          },
          "title": "Deposit Type"
        }, 
        "tooltip": { "field": "custom_tooltip", "type": "nominal"}
      }
    }
  ]
}
